// 將您的設定放入此檔案中以覆寫預設值和使用者設定。
{
	"editor.stablePeek": true,
	"php.executablePath": "E:/Software/EasyPHP-Devserver-17/eds-binaries/php/php713vc14x86x180515131554/php.exe",
  	"workbench.editor.enablePreview": false,
	"workbench.editor.enablePreviewFromQuickOpen": false,
	"editor.fontSize": 13,
	"editor.minimap.enabled": true,
	"php.suggest.basic": true,
	"typescript.referencesCodeLens.enabled": true,
	"files.exclude": {
		"**/.git": true,
		"**/.DS_Store": true,
		"**/node_modules/*": true,
		"**/template_c": true,
		"**/templates_c": true,
		"public/**/*": true,
		"www/css/*": true
	},
	"files.trimTrailingWhitespace": true,
	"files.trimFinalNewlines": true,
	"editor.rulers": [80, 120],
	"window.zoomLevel": 1,
	"git.enableSmartCommit": true,
	"git.autofetch": true,
	"eslint.enable": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact", {
			"language": "vue",
			"autoFix": true
		}
	],
	"eslint.options": {
		"plugins": ["html"],
        "extensions": [".js", ".html", ".vue"],
        "parserOptions": {
			"ecmaVersion": 6,
            "sourceType": "module"
		},
		"globals": ["__dirname", "define", "require", "jQuery"],
		"rules": {
			"extends": "off",
			"indent": ["error", 4, {"SwitchCase": 1}],
			"semi-spacing": [2, {"before": false, "after": true}], // 分號前後空格
			"semi": [2, "always"], // 結尾加上分號
			"no-console": 1, // 不使用 console
			"operator-linebreak": [0, "after", { "overrides": { "?": "before", ":": "before" } }]
		}
	},
	"diffEditor.ignoreTrimWhitespace": true,
	"gitlens.keymap": "alternate",
	"gitlens.advanced.messages": {
		"suppressCommitHasNoPreviousCommitWarning": false,
		"suppressCommitNotFoundWarning": false,
		"suppressFileNotUnderSourceControlWarning": false,
		"suppressGitVersionWarning": false,
		"suppressLineUncommittedWarning": false,
		"suppressNoRepositoryWarning": false,
		"suppressResultsExplorerNotice": false,
		"suppressShowKeyBindingsNotice": true
	},
	"workbench.editor.closeOnFileDelete": false,
	// "search.location": "panel"
}